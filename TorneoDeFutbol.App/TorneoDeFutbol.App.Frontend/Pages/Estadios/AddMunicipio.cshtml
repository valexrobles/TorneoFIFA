@page
@model TorneoDeFutbol.App.Frontend.Pages.Estadios.AddMunicipioModel
@{
}
<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="Id_Estadio">Estadio</label>
        <input type="text" id="Id_Estadio" name="Id_Estadio" class="form-control" value="@Model.estadio.idEstadio" readonly>
    </div>
    <div class="form-group">
        <label for="Id_Municipio">Municipio</label>
        <select name="Id_Municipio" id="Id_Municipio" class="form-control">
        @foreach (var municipio in Model.municipios)
        {
            <option value="@municipio.idMunicipio">@municipio.Nombre</option>
        }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Municipio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Cancelar</a>