@page
@using TorneoDeFutbol.App.Dominio
@model TorneoDeFutbol.App.Frontend.Pages.Jugadores.IndexModel
@{
}

<form method="get" class="form-inline">
    <label for="p" class="my-1 mr-2">Posicion</label>
    <select name="p" id="p" asp-for="@Model.pActual" asp-items="Html.GetEnumSelectList<Posicion>()" class="custom-select my-1 mr-sm-2">
        <option value="-1">Ver todos</option>    
    </select>
    <button type="submit" class="btn btn-primary my-1">Filtrar</button>
</form>

<form method="get" class="form-inline">
    <label for="b" class="my-1 mr-2">Buscar</label>
    <input type="text" name="b" id="b" asp-for="@Model.bActual" class="my-1 mr-sm-2">
    <button type="submit" class="btn btn-primary my-1">Buscar</button>
</form>

<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>

<h1>Listado de Jugadores</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nombres</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Direccion</th>
            <th scope="col">Numero Telefono</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <td>@jugador.nombre</td>
                <td>@jugador.apellido</td>
                <td>@jugador.numTelefono</td>
                <td>@jugador.direccion</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-idParticipante="@jugador.idParticipante">Detalle</a>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-idParticipante="@jugador.idParticipante">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>