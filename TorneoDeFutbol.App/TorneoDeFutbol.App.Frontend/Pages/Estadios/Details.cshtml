@page
@model TorneoDeFutbol.App.Frontend.Pages.Estadios.DetailsModel
@{
}
<h1>Detalles del Estadio</h1>
<table class="table table-dark">
    <tr>
            <th scope="col">Nombre</th>
            <td>@Model.estadio.nombre</td>
        </tr>
        <tr>
            <th scope="col">Dirección</th> 
            <td>@Model.estadio.direccion</td>   
        </tr>
        <tr>
            <th scope="col">Capacidad de Espectadores</th> 
            <td>@Model.estadio.capacidadEspectadores</td>
        </tr>
        <tr>
        <th scope="col">Municipio</th>
        @if (Model.estadio.municipio == null)
        {
            <td>
                <a class="btn btn-primary" asp-page="./AddMunicipio" asp-route-id="@Model.estadio.idEstadio">Asignar Municipio</a>
            </td>
        }
        else
        {
            <td>@Model.estadio.municipio.Nombre</td>
        }
    </tr>
</table>
<a class="btn btn-primary" asp-page="./Index">Volver</a>